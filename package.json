{
  "name": "dev.template.lp",
  "version": "1.3.4",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "concurrently npm:dev:*",
    "build": "BUILD_ENV=dev concurrently npm:buildTask",
    "buildTask": "npm run build:eleventy && npm run build:svgSprite && npm run build:snowpack && npm run lint-fix:eslint && npm run optimize-css",
    "optimize-css": "npm run postcss && purgecss --config=./purgecss.config.js && BUILD_ENV=optimize postcss ./build/assets/css/ -r ./build/assets/css/",
    "public": "BUILD_ENV=public concurrently npm:buildTask",
    "dev:eleventy": "eleventy --watch --incremental",
    "dev:svgSprite": "chokidar './src/assets/svg/icons/*.svg' -c 'npm run build:svgSprite' --initial",
    "dev:snowpack": "snowpack dev",
    "build:eleventy": "eleventy",
    "build:svgSprite": "svg-sprite -symbol --symbol-dest ./src/assets/svg --shape-id-separator '' --shape-id-generator 'i-%s' --symbol-sprite sprite.svg --svg-xmldecl false --shape-transform-svgo svgo.json ./src/assets/svg/icons/*.svg",
    "build:snowpack": "snowpack build",
    "build:lint-fix": "prettier 'build/**/*.html' --write",
    "lint": "concurrently npm:lint:*",
    "lint:eslint": "eslint 'src/**/*.{js,ts}'",
    "lint:prettier": "prettier --check '**/*.{html,scss,css}'",
    "lint-fix": "concurrently npm:lint-fix:*",
    "lint-fix:prettier": "prettier '**/*.{html,scss,css}' --write",
    "lint-fix:eslint": "npm run lint:eslint -- --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postcss": "npm run deleteMinCss && BUILD_ENV=build postcss ./build/assets/css/ -r ./build/assets/css/",
    "deleteMinCss": "node -e 'fs.rmSync(`build/assets/css/main-minLG.css`, {recursive:true, force:true})' && node -e 'fs.rmSync(`build/assets/css/main-minMD.css`, {recursive:true, force:true})'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0",
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "@snowpack/plugin-dotenv": "^2.2.0",
    "@snowpack/plugin-postcss": "^1.4.3",
    "@snowpack/plugin-sass": "^1.4.0",
    "@snowpack/plugin-typescript": "^1.2.1",
    "@snowpack/plugin-webpack": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "autoprefixer": "^10.4.2",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.0.0",
    "cssnano": "^5.0.15",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "postcss": "^8.4.13",
    "postcss-cli": "^9.1.0",
    "postcss-extract-media-query": "^3.0.0",
    "postcss-preset-env": "^7.2.3",
    "postcss-sort-media-queries": "^4.2.1",
    "prettier": "^2.5.1",
    "sass-easing": "^1.0.3",
    "snowpack": "^3.8.8",
    "svg-sprite": "^1.5.3",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@splidejs/splide": "^3.6.9",
    "@splidejs/splide-extension-intersection": "^0.1.3"
  }
}
